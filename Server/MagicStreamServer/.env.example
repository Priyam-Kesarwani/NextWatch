# MongoDB config
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=nextwatch

# JWT secrets
SECRET_KEY=your_secret_key_here
SECRET_REFRESH_KEY=your_refresh_secret_here

# CORS and client origin(s)
ALLOWED_ORIGINS=http://localhost:5173

# OpenAI (optional)
OPENAI_API_KEY=

# LangChain prompt template (optional)
BASE_PROMPT_TEMPLATE=Please rank the sentiment using these rankings: {rankings}

# Recommended movies limit
RECOMMENDED_MOVIE_LIMIT=5

# Cookie secure flag (set to true in production with HTTPS)
COOKIE_SECURE=false

# Cookie domain used when setting cookies in responses (default: localhost)
COOKIE_DOMAIN=localhost
